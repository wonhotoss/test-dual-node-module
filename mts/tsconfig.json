{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"traceResolution": false,
		"module": "esnext"
	},
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src"
	]
}